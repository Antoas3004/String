public class Occurance_in_String {

	public static void main(String[] args) {
		int count = 0;
		char search = 'a';
		String s = "Javatpoint";

		for (int i = 0; i < s.length(); ++i) {
			if (s.charAt(i) == search) {
				count++;
			}
		}
		System.out.println("number of time a present in String : "+count);
	}
}
